<%= form_with(model: note, data: { turbo_frame: note.new_record? ? "new_note" : dom_id(note) }) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :body, style: "display: none" %>
    <%= form.text_area :body, rows: 4, placeholder: "Write your note in Markdown" %>
  </div>

  <div>
    <%= form.submit "Save" %>
    <% unless note.new_record? %>
      <%= link_to "Cancel", notes_path, data: { turbo_frame: "_top" } %>
    <% end %>
  </div>
<% end %>
