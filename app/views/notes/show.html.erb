<small>Created <%= time_ago_in_words @note.created_at %></small>

<div id="<%= dom_id @note %>">
  <%= markdown @note.body %>
</div>

<div>
  <%= link_to "Edit", edit_note_path(@note) %> |
  <%= link_to "Back to notes", notes_path %>
</div>

<div>
  <%= button_to "Delete", @note, method: :delete %>
</div>
